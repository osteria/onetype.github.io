{
  "name": "onetype",
  "version": "1.0.0",
  "description": "Technical and Code Publications, by Yair.",
  "main": "index.js",
  "private": true,
  "scripts": {
    "precommit": "npm t",
    "precoverage": "rimraf coverage",
    "coverage": "nyc report --reporter=lcov --reporter=html --reporter=text-summary",
    "coverage:push": "cat ./coverage/lcov.info | codecov",
    "lint:js": "eslint -c .eslint.json **/**.js --quiet",
    "lint:sass": "sass-lint --config .scss-lint.yml --verbose --no-exit",
    "pretest": "npm run -s lint:sass && npm run -s lint:js",
    "test": "nyc mocha tests/**.spec.js --require babel-register",
    "posttest": "npm run -s coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onetype/onetype.github.io.git"
  },
  "keywords": [
    "Technical",
    "JavaScript",
    "Book",
    "Software",
    "Computer",
    "Science"
  ],
  "author": "Yair, @agzeri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/onetype/onetype.github.io/issues"
  },
  "homepage": "https://github.com/onetype/onetype.github.io#readme",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "eslint": "^4.13.1",
    "husky": "^0.14.3",
    "mocha": "^4.0.1",
    "node-sass": "^4.7.2",
    "nyc": "^11.3.0",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.12.1",
    "sass-true": "^3.0.2"
  },
  "nyc": {
    "exclude": [
      "tests/"
    ]
  }
}
